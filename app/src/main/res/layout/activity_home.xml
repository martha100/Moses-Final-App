<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/display_home"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/mHomeText"
        android:layout_width="190dp"
        android:layout_height="88dp"
        android:layout_marginTop="456dp"
        android:text="Welcome to Resident"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mBtnMenu"
        android:layout_width="120dp"
        android:layout_height="58dp"
        android:layout_marginTop="508dp"
        android:text="Menu"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:backgroundTint="@color/splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.893"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/mImgHome"
        android:layout_width="336dp"
        android:layout_height="445dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/display" />

</androidx.constraintlayout.widget.ConstraintLayout>