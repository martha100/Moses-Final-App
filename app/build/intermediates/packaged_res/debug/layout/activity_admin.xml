<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/admin"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/mTvResDash"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="ADMIN"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="375dp"
        android:layout_height="541dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:columnCount="2"
        android:rowCount="3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:layout_row="0"
            android:layout_column="0"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="132dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/splash"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ImgAdminProfile"
                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:srcCompat="@drawable/baseline_admin_24" />

                                <TextView
                                    android:id="@+id/AdminProfile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Admin Profile"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="140dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/splash"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ImgHostelBooked"
                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:srcCompat="@drawable/baseline_house_24" />

                                <TextView
                                    android:id="@+id/HostelBooked"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hostel Booked"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/splash"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ImgAddhostel"
                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:srcCompat="@drawable/baseline_add_home_24" />

                                <TextView
                                    android:id="@+id/Admin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add Hostel"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/splash"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ImgViewHostel"
                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:srcCompat="@drawable/baseline_view_cozy_24" />

                                <TextView
                                    android:id="@+id/ViewHostel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Hostel"
                                    android:textSize="20sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <androidx.cardview.widget.CardView
                            android:layout_width="104dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/splash"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ImgAddRoom"
                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:srcCompat="@drawable/baseline_room_24" />

                                <TextView
                                    android:id="@+id/AddRoom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add Room"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="110dp"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/splash"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ImgViewRoom"
                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:srcCompat="@drawable/baseline_view_cozy_24" />

                                <TextView
                                    android:id="@+id/ViewRoom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Room"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/splash"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ImgAddAmenities"
                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:srcCompat="@drawable/baseline_add_circle_24" />

                                <TextView
                                    android:id="@+id/Amenities"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add Amenities"
                                    android:textSize="20sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/splash"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ImgViewAmenities"
                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:srcCompat="@drawable/baseline_view_cozy_24" />

                                <TextView
                                    android:id="@+id/ViewAmenities"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Amenities"
                                    android:textSize="20sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/splash"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ImgAddLocation"
                                    android:layout_width="104dp"
                                    android:layout_height="90dp"
                                    app:srcCompat="@drawable/baseline_add_location_alt_24" />

                                <TextView
                                    android:id="@+id/AddLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add Location"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="180dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/splash"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/ImgViewLocation"
                                    android:layout_width="100dp"
                                    android:layout_height="90dp"
                                    app:srcCompat="@drawable/baseline_view_cozy_24" />

                                <TextView
                                    android:id="@+id/ViewLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="View Location"
                                    android:textSize="20sp"
                                    android:textAlignment="center"
                                    android:textColor="#000000"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </GridLayout>

</RelativeLayout>